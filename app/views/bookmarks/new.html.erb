<div class="container">
<h1>Add Bookmark to <%= @list.name %></h1>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id %>
  <%= f.input :comment %>
  <%= f.submit 'Add Bookmark' %>
<% end %>

<%= link_to 'Back', list_path(@list) %>
</div>
